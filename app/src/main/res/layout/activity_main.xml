<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:textAlignment="center"
        android:layout_margin="5dp"
        android:text="welcome to Colorchanging sequence , click here to see if the color you select effects your appbar or not ,so lets start !"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:id="@+id/c1"
            android:textAllCaps="false"
            android:background="@color/colorPrimary"
            android:layout_weight="1"
            android:text="color1"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textAllCaps="false"
            android:id="@+id/c2"
            android:background="@color/colorAccent"
            android:layout_weight="1"
            android:text="color2"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textAllCaps="false"
            android:id="@+id/c3"
            android:background="#aff"
            android:layout_weight="1"
            android:text="color3"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:textAlignment="center"

        android:layout_margin="5dp"
        android:text="welcome to Colorchanging sequence , click here to see if the color you select effects your appbar or not ,so lets start,this id for text style testing welcome to Colorchanging sequence , click here to see if the color you select effects your appbar or not ,so lets start,this id for text style testing!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#000"
            android:textColor="#fff"
            android:id="@+id/c4"
            android:textAllCaps="false"

            android:fontFamily="sans-serif-condensed"
            android:layout_weight="1"
            android:text="textstyle1"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:background="#000"
            android:textColor="#fff"
            android:textAllCaps="false"
            android:id="@+id/c5"
            android:layout_weight="1"
            android:text="Textstyle2"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#000"
            android:textColor="#fff"
            android:textAllCaps="false"
            android:id="@+id/c6"
            android:fontFamily="sans-serif-light"
            android:layout_weight="1"
            android:text="textstyle3"/>
    </LinearLayout>
</LinearLayout>